<%= form_with model: input,
              id: dom_id(input),
              url: local_assigns[:url],
              method: local_assigns[:method] || :post do |form| %>
 <% if input.errors.present? %>
   <div id="error_explanation">
     <h2><%= pluralize(input.errors.count, "error") %> prohibited this article from being saved:</h2>

     <ul>
       <% input.errors.each do |error| %>
         <li><%= error.full_message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

 <div class="field">
   <%= form.label :title %>
   <%= form.text_field :title %>
 </div>

 <div class="field">
   <%= form.label :body %>
   <%= form.text_area :body %>
 </div>

 <div class="actions">
   <%= form.submit 'Save' %>
 </div>
<% end %>
